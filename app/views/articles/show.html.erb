<p id="notice"><%= notice %></p>

<div class="row">
	<div class="col l6">
		<%= image_tag @article.cover.url, class: "responsive-img show-image" %>
	</div>
	<div class="col l6">
		<p class="title-margine">
		  	<strong>Title article:</strong>
		  	<%= @article.title %>
		</p><br>

		<p>
		  	<strong>Description:</strong>
		 	<%= @article.description %>
		</p><br>

		<p>
			<strong>Name bayer:</strong>
			<%= @article.user.name %>
		</p><br>


		<p>
		  	<strong>Price article:</strong>
		  	<%= number_to_currency(@article.price) %>
		</p><br>
	</div>
</div>

<% if current_user == @article.user %>
<%= link_to 'Edit', edit_article_path(@article) %> |
<% end %>
<%= link_to 'Back', articles_path %>

